                                    <lg n="1" met="vasantatilakā">
                                        <l n="a">bhūmipradā divi l<surplus>l</surplus>ala<surplus>ṁ</surplus>nti pata<surplus>ṁ</surplus>nti ha<surplus>ṁ</surplus>nta</l>
